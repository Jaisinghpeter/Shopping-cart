{{outlet}}
<div class="container">
    <div id="login" class="row">
        <div class="col-sm-4"></div>
        <form > 
            <div class="form-group">
                <label for="name">Product Name:</label>
                {{input type="text" value=name class="form-control" id="name"}}
            </div>
            <div class="form-group">
                <label for="Description">Product Description:</label>
                {{input type="text" value=description class="form-control" id="Description"}}
            </div>
            <div class="form-group">
                <label for="image">Image URL:</label>
                {{input type="text" value=imageURL class="form-control" id="image"}}
            </div>
            <div class="form-group">
                <label for="price">Product Price:</label>
                {{input type="text" value=price class="form-control" id="price"}}
            </div>
            <button type="submit" {{action "addProduct"}} class="btn btn-primary">Add Product</button>
        </form>
    </div>
</div>